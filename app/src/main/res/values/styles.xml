<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Темная тема -->
    <style name="AppTheme_Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Цвета для темной темы -->
        <item name="colorPrimary">@color/textColorSecondaryAlt</item> <!-- Основной цвет темы -->
        <item name="colorPrimaryDark">#18004D</item> <!-- Темный оттенок основного цвета -->
        <item name="colorAccent">#005951</item> <!-- Акцентный цвет, используется для элементов управления, таких как кнопки и переключатели -->
        <item name="android:windowBackground">@color/textColorSecondary</item> <!-- Цвет фона окна (черный для темной темы) -->
        <item name="android:textColorPrimary">@android:color/white</item> <!-- Основной цвет текста (белый для темной темы) -->
        <item name="android:textColorSecondary">@android:color/darker_gray</item> <!-- Вторичный цвет текста (темно-серый для темной темы) -->
    </style>

    <!-- Светлая тема -->
    <style name="AppTheme_Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Цвета для светлой темы -->
        <item name="colorPrimary">@color/dark_gray</item> <!-- Основной цвет темы -->
        <item name="colorPrimaryDark">@color/darker_gray</item> <!-- Темный оттенок основного цвета -->
        <item name="colorAccent">@color/purple_200</item> <!-- Акцентный цвет, используется для элементов управления, таких как кнопки и переключатели -->
        <item name="android:windowBackground">@android:color/white</item> <!-- Цвет фона окна (белый для светлой темы) -->
        <item name="android:textColorPrimary">@android:color/black</item> <!-- Основной цвет текста (черный для светлой темы) -->
        <item name="android:textColorSecondary">@android:color/darker_gray</item> <!-- Вторичный цвет текста (темно-серый для светлой темы) -->
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="GreenButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@android:color/holo_green_light</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Theme.Preparation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary branding color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/holo_green_light</item> <!-- Зеленый цвет для статус-бара -->
        <!-- Customize your theme here. -->
    </style>

    <!-- Button style -->
    <style name="ThemeButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Style for text views -->
    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
